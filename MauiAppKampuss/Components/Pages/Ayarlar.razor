@page "/ayarlar"
@inject NavigationManager Navigation

<div class="container">
    <!-- Üst Kısım: Geri Butonu -->
    <div class="header">
        <button class="back-button" @onclick="GoBack"><i class="fa fa-arrow-left"></i></button>
        <h3>Ayarlar</h3>
    </div>

    <!-- Profil Fotoğrafı Yükleme -->
    <div class="profile-photo-section">
        <label for="profile-photo-upload" class="profile-photo-label">Profil Fotoğrafı Yükle</label>
        <input type="file" id="profile-photo-upload" class="profile-photo-input" @onchange="OnProfilePhotoChange" />
        <img src="@profilePhotoUrl" alt="Profil Fotoğrafı" class="profile-photo-preview" />
    </div>

    <!-- Kullanıcı Adı Değiştirme -->
    <div class="form-group">
        <label for="username">Kullanıcı Adı</label>
        <input type="text" id="username" @bind="username" class="form-control" />
    </div>

    <!-- Bio Değiştirme -->
    <div class="form-group">
        <label for="bio">Bio</label>
        <textarea id="bio" @bind="bio" class="form-control"></textarea>
    </div>

    <!-- Gizli Profil ve Bildirim Alma -->
    <div class="form-group">
        <input type="checkbox" id="private-profile" @bind="isPrivateProfile" />
        <label for="private-profile">Gizli Profil</label>
    </div>
    <div class="form-group">
        <input type="checkbox" id="receive-notifications" @bind="receiveNotifications" />
        <label for="receive-notifications">Bildirim Alma</label>
    </div>

    <!-- Tema Rengi Seçme -->
    <div class="form-group">
        <label for="theme-color">Tema Rengi</label>
        <input type="color" id="theme-color" @bind="themeColor" class="form-control" />
    </div>

    <!-- Kaydet Butonu -->
    <button class="save-button" @onclick="SaveSettings">Kaydet</button>
</div>

@code {
    private string profilePhotoUrl = "https://via.placeholder.com/150";
    private string username = "Kullanıcı Adı";
    private string bio = "Bu bir bio örneğidir.";
    private bool isPrivateProfile = false;
    private bool receiveNotifications = true;
    private string themeColor = "#ffffff";

    private void OnProfilePhotoChange(ChangeEventArgs e)
    {
        //selam
    }

    private void SaveSettings()
    {
        // Ayarları kaydetme işlemi
        Console.WriteLine($"Kullanıcı Adı: {username}");
        Console.WriteLine($"Bio: {bio}");
        Console.WriteLine($"Gizli Profil: {isPrivateProfile}");
        Console.WriteLine($"Bildirim Alma: {receiveNotifications}");
        Console.WriteLine($"Tema Rengi: {themeColor}");
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/profil");
    }
}