@page "/profil"
@inject NavigationManager Navigation

<div class="container">
    <!-- Üst Kısım: Geri Butonu ve Ayarlar İkonu -->
    <div class="header">
        <button class="back-button" @onclick="AkisaGit"><i class="fa fa-arrow-left"></i></button>
        <button class="settings-button" @onclick="AyarlaraGit"><i class="fa fa-cog"></i></button>
    </div>

    <!-- Profil Bilgileri -->
    <div class="profile-info">
        <img src="https://via.placeholder.com/150" alt="Profil Fotoğrafı" class="profile-photo" />
        <h2>Kullanıcı Adı</h2>
        <p class="bio">Bu bir bio örneğidir. Kısa bir açıklama buraya gelecek.</p>
    </div>

    <!-- Seçim Kısmı -->
    <div class="tabs">
        <button class="tab-button2" @onclick="ShowPosts">Gönderiler</button>
        <button class="tab-button2" @onclick="ShowMedia">Medya</button>
        <button class="tab-button2" @onclick="ShowPins">Kaydedilenler</button>
    </div>

    <!-- İçerik Kısmı -->
    <div class="content">
        @if (showPosts)
        {
            <div>
                <!-- Gönderiler buraya eklenecek -->
                <p>Gönderi 1: Lorem ipsum dolor sit amet...</p>
                <p>Gönderi 2: Consectetur adipiscing elit...</p>
                <!-- Diğer gönderiler -->
            </div>
        }
        else if (showMedia)
        {
            <div>
                <!-- Medya içerikleri buraya eklenecek -->
                <img src="https://via.placeholder.com/200" alt="Resim 1" />
                <video controls>
                    <source src="https://www.w3schools.com/html/mov_bbb.mp4" type="video/mp4">
                    Tarayıcınız video etiketini desteklemiyor.
                </video>
                <!-- Diğer medya içerikleri -->
            </div>
        }
        else if (showPins)
        {
            <div>
                <!-- Medya içerikleri buraya eklenecek -->
                <img src="https://via.placeholder.com/200" alt="Resim 1" />
                <img src="https://via.placeholder.com/200" alt="Resim 1" />
                <img src="https://via.placeholder.com/200" alt="Resim 1" />
                <img src="https://via.placeholder.com/200" alt="Resim 1" />
                <!-- Diğer medya içerikleri -->
            </div>
        }
    </div>
</div>

@code {
    private bool showPosts = true;
    private bool showMedia = false;
    private bool showPins = false;

    private void ShowPins()
    {
        showPins = true;
        showPosts = false;
        showMedia = false;
    }

    private void ShowPosts()
    {
        showPosts = true;
        showMedia = false;
        showPins = false;
    }

    private void ShowMedia()
    {
        showPosts = false;
        showMedia = true;
        showPins = false;
    }

    private void AkisaGit()
    {
        Navigation.NavigateTo("/akis");
    }

    private void AyarlaraGit()
    {
        Navigation.NavigateTo("/ayarlar");
    }
}