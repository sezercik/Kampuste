@page "/paylas"
@inject NavigationManager Navigation

<div class="container">
    <div class="header">
        <button class="back-button" @onclick="AkisaGit"><i class="fa fa-arrow-left"></i></button>
    </div>
    <div class="share-form">
        <textarea class="share-textarea" placeholder="Buraya yazın..."></textarea>
        <div class="custom-file-input-wrapper">
            <input type="file" accept="image/*" class="custom-file-input" />
            <label for="file-input">Resim seçiniz</label>
        </div>
        <div class="custom-file-input-wrapper">
            <input type="file" accept="video/*" class="custom-file-input" />
            <label for="file-input">Video seçiniz</label>
        </div>
        <div class="custom-file-input-wrapper">
            <input type="file" accept="application/*" class="custom-file-input" />
            <label for="file-input">Dosya seçiniz</label>
        </div>
        <button class="share-button">Paylaş</button>
    </div>
</div>

@code {
    private void AkisaGit()
    {
        Navigation.NavigateTo("/akis");
    }
}